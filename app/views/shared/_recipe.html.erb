<div class="card w-75">
  <div class="card-body row">
    <div class="col col-md-4 ms-3  align-self-center">
      <h2 class="fw-bold"><%= link_to recipe.name, recipe_path(recipe.id), class: "card-title text-black text-decoration-none" %></h2>
      <% if recipe.public %>
      <p>Public</p>
      <% else %>
      <p>Private</p>
      <% end %>
      <%= button_to "REMOVE", recipe_path(recipe.id), method: :delete, class: "btn btn-outline-dark" %>
    </div>
    <div class="col col-md-6">
      <p class="fs-5"><%= recipe.description %></p>
    </div>
  </div>
</div>