<h1>Food List</h1>

<%= link_to "Add food", new_food_path, class: "btn btn-outline-dark align-self-center mt-2" %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Food</th>
      <th scope="col">measurement unit</th>
      <th scope="col">Unit Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    
      <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td><%= food.price %></td>
        <td>
          <%= button_to "Delete", food_path(food.id), method: :delete, class: "btn btn-outline-dark" %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>