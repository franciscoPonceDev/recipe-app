<% flash.each do |type, msg| %>
  <%= content_tag :div, msg, class: "#{type} alert" %>
<% end %>
<div class="d-flex flex-column mb-2 align-items-center">
  <h1 class="mx-3">Food</h1>
  <%= bootstrap_form_with url: "/inventories/#{@inventory.id}/inventory_foods", scope: :inventory_food do |f| %>
    <%= f.collection_select(:food_id, Food.where.not(id: @inventory.food_ids), :id, :name) %>
    <%= f.number_field :quantity, min: 0, placeholder: 'Quantity' %>
    <%= f.hidden_field :inventory_id, value: @inventory.id %>
    <div class="text-center">
      <%= f.submit "Add Food" %>
    </div>
  <% end %>
</div>