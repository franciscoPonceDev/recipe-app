<div class="d-flex flex-column mb-2 align-items-center">
  <div class="d-flex">
    <h1 class="mx-3"><%= @user.name %>'s Recipes</h1>
  </div>
  <div class="d-flex flex-column mb-2 align-items-center">
    <div class="d-flex">
      <div>
        <%=
          button_to "New inventory",
                    new_inventory_path,
                    class: "btn btn-outline-dark align-self-center mt-2"
        %>
      </div>
    </div>
    <% if @inventories.empty? %>
      <p class="mt-5 border border-warning font-weight-bold text-warning">
        <span class="p-3">You don't have any inventories</span>
      </p>
    <% else %>
      <div class="flex flex-col gap-7">
        <% @inventories.each do |inventory| %>
          <div class="card-body row">
            <div class="col col-md-4 ms-3  align-self-center">
              <%= link_to inventory.name, inventory_path(inventory.id), class: "link-warning" %>
              <%=
                button_to "Delete",
                          inventory_path(inventory.id), method: :delete,
                          class: "btn btn-outline-dark"
              %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>