<div class="d-flex flex-column mb-2 align-items-center">
  <h1 class="mx-3">New Inventory</h1>
  <div class="mt-14">
    <%= form_with model: @inventory, url: inventories_path, local: true, html: { "data-turbo": "false" } do |form| %>
      <% if @inventory.errors.any? %>
        <div class="border px-7 py-3 mb-4 border-red-400 bg-red-200 font-medium">
          <% @inventory.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
          <% end %>
        </div>
      <% end %>
      <div class="border p-7 flex flex-col gap-7">
        <div>
          <%= form.label :name, class: 'font-medium block mb-2' %>
          <%= form.text_field :name, class: 'border rounded' %>
        </div>
        <%= form.submit "Submit", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>