<div class="container">
  <h1 class="text-center">Shopping List</h1>
   <div class="card-body row align-items-between">
    <div class="col col-md-6 ms-3">
      <h4 class="fw-bold my-1">Amount of food to buy: <%= @foods.length %></h4>
      <%
=begin%>
 <h4 class="fw-bold my-4">Total value of food needed: <%= @foods.map { |item| item[:price]}.sum  %> $</h4> 
<%
=end%>
    </div>
    <div class="col col-md-4 ms-auto">
      <div class="d-flex flex-column justify-content-around">
        <h4 class="fw-bold">Recipe: <%= link_to @selected_recipe.name, recipe_path(@selected_recipe.id) %></h4>
        <h4 class="fw-bold">Inventory: <%= link_to @selected_inventory.name, inventory_path(@selected_inventory.id) %></h4>
      </div>
    </div>
    <table class="table table-success table-striped w-50 mt-3">
  <thead>
    <tr>
      <th scope="col" class="text-success">Food</th>
      <th scope="col" class="text-success">measurement unit</th>
      <th scope="col" class="text-success">Unit Price</th>
      <th scope="col" class="text-success">Actions</th>
    </tr>
  </thead>
  <tbody>
      <% @foods.each do |food| %>
      <tr>
        <td class="text-success"><%= food.name %></td>
        <td class="text-success"><%= food.measurement_unit %></td>
        <td class="text-success"><%= food.price %></td>
        <td class="text-success">
          <%= button_to "Delete", food_path(food.id), method: :delete, class: "btn btn-outline-danger" %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
  </div>
</div>